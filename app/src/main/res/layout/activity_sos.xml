<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons_layout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Emergency Contact 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_contact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etContact1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact 1" />

                    <EditText
                        android:id="@+id/etRelationship1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Relationship to Contact 1" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Emergency Contact 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_contact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etContact2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact 2" />

                    <EditText
                        android:id="@+id/etRelationship2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Relationship to Contact 2" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Emergency Contact 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_contact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etContact3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact 3" />

                    <EditText
                        android:id="@+id/etRelationship3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Relationship to Contact 3" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Customer Support -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_customer_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Heading -->
                    <TextView
                        android:id="@+id/tvCustomerSupportHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Support"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Email -->
                    <TextView
                        android:id="@+id/tvCustomerSupportEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: kavana.20bcs@cmr.edu.in"
                        android:textSize="16sp"/>

                    <!-- Contact Number -->
                    <TextView
                        android:id="@+id/tvCustomerSupportContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact us: +91 8124567892"
                        android:textSize="16sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSaveContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Contacts" />

        <Button
            android:id="@+id/btnSetAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SET ALERT" />
    </LinearLayout>

</RelativeLayout>
